<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nirjon.bledemo3_readingcharacteristic.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Location Permission. Check Logcat msg."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:onClick="startScanButton"
        android:text="Start Scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="stopScanAndListCharacteristicsButton"
        android:text="Stop Scan, Discover Services"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="readCharacteristicsButton"
        android:text="Read Heartrate Characteristic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="disconnectButton"
        android:text="Gatt Disconnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
